{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write", 
        "hooks": [
          {
            "type": "command",
            "command": "scripts/auto-commit-hook.bat",
            "description": "Auto-commit with AI-generated commit messages"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "scripts/auto-commit-hook.bat",
            "description": "Final auto-commit on session end"
          }
        ]
      }
    ]
  }
}